<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Maintenance Request Pivot View by Team -->
    <record id="view_maintenance_request_pivot_team" model="ir.ui.view">
        <field name="name">gear.maintenance.request.pivot.team</field>
        <field name="model">gear.maintenance.request</field>
        <field name="arch" type="xml">
            <pivot string="Maintenance by Team">
                <field name="team_id" type="row"/>
                <field name="state" type="col"/>
                <field name="id" type="measure" string="Count"/>
                <field name="duration_hours" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Maintenance Request Pivot View by Equipment Category -->
    <record id="view_maintenance_request_pivot_category" model="ir.ui.view">
        <field name="name">gear.maintenance.request.pivot.category</field>
        <field name="model">gear.maintenance.request</field>
        <field name="arch" type="xml">
            <pivot string="Maintenance by Category">
                <field name="equipment_category_id" type="row"/>
                <field name="request_type" type="col"/>
                <field name="id" type="measure" string="Count"/>
                <field name="duration_hours" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Maintenance Request Graph View - Bar by State -->
    <record id="view_maintenance_request_graph_state" model="ir.ui.view">
        <field name="name">gear.maintenance.request.graph.state</field>
        <field name="model">gear.maintenance.request</field>
        <field name="arch" type="xml">
            <graph string="Requests by Status" type="bar">
                <field name="state"/>
                <field name="id" type="measure" string="Count"/>
            </graph>
        </field>
    </record>

    <!-- Maintenance Request Graph View - Pie by Type -->
    <record id="view_maintenance_request_graph_type" model="ir.ui.view">
        <field name="name">gear.maintenance.request.graph.type</field>
        <field name="model">gear.maintenance.request</field>
        <field name="arch" type="xml">
            <graph string="Requests by Type" type="pie">
                <field name="request_type"/>
                <field name="id" type="measure" string="Count"/>
            </graph>
        </field>
    </record>

    <!-- Maintenance Request Graph View - Line by Month -->
    <record id="view_maintenance_request_graph_trend" model="ir.ui.view">
        <field name="name">gear.maintenance.request.graph.trend</field>
        <field name="model">gear.maintenance.request</field>
        <field name="arch" type="xml">
            <graph string="Maintenance Trend" type="line">
                <field name="scheduled_date" interval="month"/>
                <field name="id" type="measure" string="Count"/>
            </graph>
        </field>
    </record>

    <!-- Equipment Pivot View -->
    <record id="view_equipment_pivot" model="ir.ui.view">
        <field name="name">gear.equipment.pivot</field>
        <field name="model">gear.equipment</field>
        <field name="arch" type="xml">
            <pivot string="Equipment Analysis">
                <field name="category_id" type="row"/>
                <field name="maintenance_team_id" type="col"/>
                <field name="id" type="measure" string="Count"/>
            </pivot>
        </field>
    </record>

    <!-- Equipment Graph View -->
    <record id="view_equipment_graph" model="ir.ui.view">
        <field name="name">gear.equipment.graph</field>
        <field name="model">gear.equipment</field>
        <field name="arch" type="xml">
            <graph string="Equipment by Category" type="pie">
                <field name="category_id"/>
                <field name="id" type="measure" string="Count"/>
            </graph>
        </field>
    </record>

    <!-- Analysis Action - Requests by Team -->
    <record id="action_analysis_by_team" model="ir.actions.act_window">
        <field name="name">Analysis by Team</field>
        <field name="res_model">gear.maintenance.request</field>
        <field name="view_mode">pivot,graph</field>
        <field name="view_id" ref="view_maintenance_request_pivot_team"/>
    </record>

    <!-- Analysis Action - Requests by Category -->
    <record id="action_analysis_by_category" model="ir.actions.act_window">
        <field name="name">Analysis by Category</field>
        <field name="res_model">gear.maintenance.request</field>
        <field name="view_mode">pivot,graph</field>
        <field name="view_id" ref="view_maintenance_request_pivot_category"/>
    </record>

    <!-- Analysis Action - Equipment Distribution -->
    <record id="action_equipment_analysis" model="ir.actions.act_window">
        <field name="name">Equipment Distribution</field>
        <field name="res_model">gear.equipment</field>
        <field name="view_mode">pivot,graph</field>
        <field name="view_id" ref="view_equipment_pivot"/>
    </record>

    <!-- Reporting Menu -->
    <menuitem
        id="menu_gear_guard_reporting"
        name="Reporting"
        parent="menu_gear_guard_root"
        sequence="90"/>

    <menuitem
        id="menu_analysis_by_team"
        name="Analysis by Team"
        parent="menu_gear_guard_reporting"
        action="action_analysis_by_team"
        sequence="10"/>

    <menuitem
        id="menu_analysis_by_category"
        name="Analysis by Category"
        parent="menu_gear_guard_reporting"
        action="action_analysis_by_category"
        sequence="20"/>

    <menuitem
        id="menu_equipment_analysis"
        name="Equipment Distribution"
        parent="menu_gear_guard_reporting"
        action="action_equipment_analysis"
        sequence="30"/>

</odoo>
