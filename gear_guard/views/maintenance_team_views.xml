<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Maintenance Team Views Extension -->
    
    <!-- Maintenance Team Kanban View -->
    <record id="view_maintenance_team_kanban" model="ir.ui.view">
        <field name="name">gear.maintenance.team.kanban</field>
        <field name="model">gear.maintenance.team</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="member_ids"/>
                <field name="equipment_count"/>
                <field name="open_request_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <i class="fa fa-users me-1"/>
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="d-flex justify-content-between mt-2">
                                        <span class="badge bg-primary">
                                            <field name="equipment_count"/> Equipment
                                        </span>
                                        <span t-if="record.open_request_count.raw_value > 0" class="badge bg-warning">
                                            <field name="open_request_count"/> Open
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_right">
                                        <field name="member_ids" widget="many2many_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Maintenance Team Search View -->
    <record id="view_maintenance_team_search" model="ir.ui.view">
        <field name="name">gear.maintenance.team.search</field>
        <field name="model">gear.maintenance.team</field>
        <field name="arch" type="xml">
            <search string="Search Teams">
                <field name="name"/>
                <field name="member_ids"/>
                <filter string="Has Open Requests" name="filter_open_requests" domain="[('open_request_count', '>', 0)]"/>
                <filter string="Has Equipment" name="filter_has_equipment" domain="[('equipment_count', '>', 0)]"/>
                <filter string="Archived" name="filter_archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Update Maintenance Team Action to include Kanban -->
    <record id="action_maintenance_team" model="ir.actions.act_window">
        <field name="name">Maintenance Teams</field>
        <field name="res_model">gear.maintenance.team</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_maintenance_team_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first maintenance team
            </p>
            <p>
                Organize your technicians into teams for better maintenance management.
            </p>
        </field>
    </record>

</odoo>
