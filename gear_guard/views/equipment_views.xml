<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Equipment Tree View -->
    <record id="view_equipment_tree" model="ir.ui.view">
        <field name="name">gear.equipment.tree</field>
        <field name="model">gear.equipment</field>
        <field name="arch" type="xml">
            <tree string="Equipment">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="category_id" optional="show"/>
                <field name="department_id"/>
                <field name="maintenance_team_id"/>
                <field name="default_technician_id" widget="many2one_avatar_user"/>
                <field name="location"/>
                <field name="is_scrapped" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Equipment Form View -->
    <record id="view_equipment_form" model="ir.ui.view">
        <field name="name">gear.equipment.form</field>
        <field name="model">gear.equipment</field>
        <field name="arch" type="xml">
            <form string="Equipment">
                <header>
                    <button name="action_scrap_equipment"
                            string="Scrap Equipment"
                            type="object"
                            class="btn-danger"
                            invisible="is_scrapped"/>
                    <button name="action_restore_equipment"
                            string="Restore Equipment"
                            type="object"
                            class="btn-success"
                            invisible="not is_scrapped"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_maintenance_requests"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-wrench">
                            <field name="open_maintenance_request_count" widget="statinfo" string="Open"/>
                        </button>
                        <button name="action_view_maintenance_requests"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-list">
                            <field name="maintenance_request_count" widget="statinfo" string="All Requests"/>
                        </button>
                        <button name="action_create_maintenance_request"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-plus"
                                invisible="is_scrapped">
                            <span>Create Request</span>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Scrapped" bg_color="bg-danger" invisible="not is_scrapped"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Equipment Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General Information">
                            <field name="serial_number"/>
                            <field name="category_id"/>
                            <field name="location"/>
                            <field name="department_id"/>
                        </group>
                        <group string="Maintenance Assignment">
                            <field name="maintenance_team_id"/>
                            <field name="technician_domain_ids" invisible="1"/>
                            <field name="default_technician_id" widget="many2one_avatar_user"/>
                        </group>
                    </group>
                    <group>
                        <group string="Purchase Information">
                            <field name="purchase_date"/>
                            <field name="warranty_expiry_date"/>
                        </group>
                        <group string="Status">
                            <field name="is_scrapped" readonly="1"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Equipment Kanban View -->
    <record id="view_equipment_kanban" model="ir.ui.view">
        <field name="name">gear.equipment.kanban</field>
        <field name="model">gear.equipment</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="location"/>
                <field name="maintenance_team_id"/>
                <field name="default_technician_id"/>
                <field name="is_scrapped"/>
                <field name="open_maintenance_request_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.is_scrapped.raw_value ? 'bg-danger-light' : ''}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <span t-if="record.is_scrapped.raw_value" class="badge bg-danger">Scrapped</span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div t-if="record.serial_number.value">
                                        <strong>S/N:</strong> <field name="serial_number"/>
                                    </div>
                                    <div t-if="record.location.value">
                                        <i class="fa fa-map-marker"/> <field name="location"/>
                                    </div>
                                    <div t-if="record.maintenance_team_id.value">
                                        <i class="fa fa-users"/> <field name="maintenance_team_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.open_maintenance_request_count.raw_value > 0" class="badge bg-warning">
                                            <field name="open_maintenance_request_count"/> Open
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="default_technician_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Equipment Search View -->
    <record id="view_equipment_search" model="ir.ui.view">
        <field name="name">gear.equipment.search</field>
        <field name="model">gear.equipment</field>
        <field name="arch" type="xml">
            <search string="Search Equipment">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="location"/>
                <field name="category_id"/>
                <field name="department_id"/>
                <field name="maintenance_team_id"/>
                <field name="default_technician_id"/>
                <filter string="Active" name="filter_active" domain="[('is_scrapped', '=', False)]"/>
                <filter string="Scrapped" name="filter_scrapped" domain="[('is_scrapped', '=', True)]"/>
                <separator/>
                <filter string="Under Warranty" name="filter_warranty" domain="[('warranty_expiry_date', '>=', context_today().strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Maintenance Team" name="group_team" context="{'group_by': 'maintenance_team_id'}"/>
                    <filter string="Location" name="group_location" context="{'group_by': 'location'}"/>
                    <filter string="Technician" name="group_technician" context="{'group_by': 'default_technician_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Equipment Action -->
    <record id="action_equipment" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">gear.equipment</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_equipment_search"/>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first equipment
            </p>
            <p>
                Track and manage all your equipment with GearGuard.
            </p>
        </field>
    </record>

    <!-- Scrapped Equipment Action -->
    <record id="action_equipment_scrapped" model="ir.actions.act_window">
        <field name="name">Scrapped Equipment</field>
        <field name="res_model">gear.equipment</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_equipment_search"/>
        <field name="domain">[('is_scrapped', '=', True)]</field>
        <field name="context">{}</field>
    </record>

    <!-- Maintenance Team Tree View -->
    <record id="view_maintenance_team_tree" model="ir.ui.view">
        <field name="name">gear.maintenance.team.tree</field>
        <field name="model">gear.maintenance.team</field>
        <field name="arch" type="xml">
            <tree string="Maintenance Teams">
                <field name="name"/>
                <field name="member_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="equipment_count"/>
                <field name="open_request_count"/>
            </tree>
        </field>
    </record>

    <!-- Maintenance Team Form View -->
    <record id="view_maintenance_team_form" model="ir.ui.view">
        <field name="name">gear.maintenance.team.form</field>
        <field name="model">gear.maintenance.team</field>
        <field name="arch" type="xml">
            <form string="Maintenance Team">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_equipment"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-cogs">
                            <field name="equipment_count" widget="statinfo" string="Equipment"/>
                        </button>
                        <button name="action_view_maintenance_requests"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-wrench">
                            <field name="open_request_count" widget="statinfo" string="Open Requests"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Team Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Team Members">
                            <field name="member_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group string="Settings">
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Team description..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Maintenance Team Action -->
    <record id="action_maintenance_team" model="ir.actions.act_window">
        <field name="name">Maintenance Teams</field>
        <field name="res_model">gear.maintenance.team</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first maintenance team
            </p>
            <p>
                Organize your technicians into teams for better maintenance management.
            </p>
        </field>
    </record>

</odoo>
