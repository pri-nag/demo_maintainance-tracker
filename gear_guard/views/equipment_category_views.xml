<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Equipment Category Tree View -->
    <record id="view_equipment_category_tree" model="ir.ui.view">
        <field name="name">gear.equipment.category.tree</field>
        <field name="model">gear.equipment.category</field>
        <field name="arch" type="xml">
            <tree string="Equipment Categories">
                <field name="name"/>
                <field name="code"/>
                <field name="parent_id"/>
                <field name="equipment_count"/>
            </tree>
        </field>
    </record>

    <!-- Equipment Category Form View -->
    <record id="view_equipment_category_form" model="ir.ui.view">
        <field name="name">gear.equipment.category.form</field>
        <field name="model">gear.equipment.category</field>
        <field name="arch" type="xml">
            <form string="Equipment Category">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Category Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="parent_id"/>
                        </group>
                        <group>
                            <field name="equipment_count"/>
                            <field name="active"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Category description..."/>
                        </page>
                        <page string="Subcategories" name="subcategories">
                            <field name="child_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="equipment_count"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Equipment Category Search View -->
    <record id="view_equipment_category_search" model="ir.ui.view">
        <field name="name">gear.equipment.category.search</field>
        <field name="model">gear.equipment.category</field>
        <field name="arch" type="xml">
            <search string="Search Categories">
                <field name="name"/>
                <field name="code"/>
                <field name="parent_id"/>
                <filter string="Top Level" name="filter_top" domain="[('parent_id', '=', False)]"/>
                <filter string="Archived" name="filter_archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Parent Category" name="group_parent" context="{'group_by': 'parent_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Equipment Category Action -->
    <record id="action_equipment_category" model="ir.actions.act_window">
        <field name="name">Equipment Categories</field>
        <field name="res_model">gear.equipment.category</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_equipment_category_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first equipment category
            </p>
        </field>
    </record>

    <!-- Menu Item for Categories -->
    <menuitem
        id="menu_equipment_category"
        name="Equipment Categories"
        parent="menu_gear_guard_configuration"
        action="action_equipment_category"
        sequence="20"/>

</odoo>
