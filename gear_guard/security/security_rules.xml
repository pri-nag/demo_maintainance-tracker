<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Equipment Category for better organization -->
    <record id="ir_rule_equipment_user" model="ir.rule">
        <field name="name">Equipment: User Access</field>
        <field name="model_id" ref="model_gear_equipment"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="ir_rule_maintenance_request_user" model="ir.rule">
        <field name="name">Maintenance Request: User can see all</field>
        <field name="model_id" ref="model_gear_maintenance_request"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="ir_rule_maintenance_team_user" model="ir.rule">
        <field name="name">Maintenance Team: User Access</field>
        <field name="model_id" ref="model_gear_maintenance_team"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

</odoo>
