<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Bulk Create Maintenance Request Wizard Form -->
    <record id="view_maintenance_request_wizard_form" model="ir.ui.view">
        <field name="name">gear.maintenance.request.wizard.form</field>
        <field name="model">gear.maintenance.request.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Bulk Maintenance Requests">
                <group>
                    <group string="Equipment Selection">
                        <field name="equipment_ids" widget="many2many_tags"/>
                    </group>
                    <group string="Request Details">
                        <field name="request_type" widget="radio"/>
                        <field name="priority" widget="priority"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="name_template"/>
                        <field name="scheduled_date"/>
                        <field name="duration_hours" widget="float_time"/>
                    </group>
                </group>
                <group string="Description">
                    <field name="description" nolabel="1" placeholder="Description for all created requests..."/>
                </group>
                <footer>
                    <button name="action_create_requests" string="Create Requests" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Bulk Assign Wizard Form -->
    <record id="view_maintenance_assign_wizard_form" model="ir.ui.view">
        <field name="name">gear.maintenance.assign.wizard.form</field>
        <field name="model">gear.maintenance.assign.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk Assign Requests">
                <group>
                    <field name="request_ids" widget="many2many_tags" readonly="1"/>
                </group>
                <group>
                    <group string="Assignment">
                        <field name="team_id"/>
                        <field name="available_user_ids" invisible="1"/>
                        <field name="assigned_user_id" widget="many2one_avatar_user"/>
                    </group>
                    <group string="Schedule">
                        <field name="scheduled_date"/>
                    </group>
                </group>
                <footer>
                    <button name="action_assign" string="Apply" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for Bulk Create Wizard -->
    <record id="action_maintenance_request_wizard" model="ir.actions.act_window">
        <field name="name">Create Bulk Maintenance Requests</field>
        <field name="res_model">gear.maintenance.request.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Action for Bulk Assign Wizard -->
    <record id="action_maintenance_assign_wizard" model="ir.actions.act_window">
        <field name="name">Bulk Assign Requests</field>
        <field name="res_model">gear.maintenance.assign.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_request_ids': active_ids}</field>
    </record>

    <!-- Server Action for Bulk Assign from Tree View -->
    <record id="action_server_bulk_assign" model="ir.actions.server">
        <field name="name">Bulk Assign</field>
        <field name="model_id" ref="model_gear_maintenance_request"/>
        <field name="binding_model_id" ref="model_gear_maintenance_request"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = {
        'name': 'Bulk Assign Requests',
        'type': 'ir.actions.act_window',
        'res_model': 'gear.maintenance.assign.wizard',
        'view_mode': 'form',
        'target': 'new',
        'context': {'default_request_ids': records.ids},
    }
        </field>
    </record>

    <!-- Menu Item for Bulk Create -->
    <menuitem
        id="menu_bulk_create_requests"
        name="Bulk Create Requests"
        parent="menu_gear_guard_maintenance"
        action="action_maintenance_request_wizard"
        sequence="25"/>

</odoo>
